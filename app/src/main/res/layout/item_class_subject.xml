<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_1"
        app:cardElevation="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:src="@drawable/decorate"
                android:layout_marginEnd="-9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:layout_width="3dp"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/rec_tin_chi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/lable_num_tin_chi"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/lable_num_tin_chi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/credits_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="3 tín chỉ"
                android:textColor="@color/red2"
                app:layout_constraintBottom_toBottomOf="@+id/lable_num_tin_chi"
                app:layout_constraintEnd_toEndOf="@+id/lable_num_tin_chi"
                app:layout_constraintStart_toStartOf="@+id/lable_num_tin_chi"
                app:layout_constraintTop_toTopOf="@+id/lable_num_tin_chi" />

            <TextView
                android:id="@+id/text_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lập trình game cơ bản"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:maxLines="3"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lable_num_tin_chi"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_name_1"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_2"
        app:cardElevation="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:src="@drawable/decorate"
                android:layout_marginEnd="-9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:layout_width="3dp"
                android:layout_height="24dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/rec_tin_chi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/lable_num_tin_chi_2"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/lable_num_tin_chi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/credits_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="3 tín chỉ"
                android:textColor="@color/red2"
                app:layout_constraintBottom_toBottomOf="@+id/lable_num_tin_chi_2"
                app:layout_constraintEnd_toEndOf="@+id/lable_num_tin_chi_2"
                app:layout_constraintStart_toStartOf="@+id/lable_num_tin_chi_2"
                app:layout_constraintTop_toTopOf="@+id/lable_num_tin_chi_2" />

            <TextView
                android:id="@+id/text_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lập trình game cơ bản"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:maxLines="3"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lable_num_tin_chi_2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text_name_2"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>