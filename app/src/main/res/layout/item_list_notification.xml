<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="3dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_bell"
                android:layout_width="44dp"
                android:layout_height="42.45dp"
                android:src="@drawable/bell"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/title_notification"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Nhắc lịch thi học phần Tin học..."
                android:fontFamily="@font/inter_semi_bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/image_bell"
                app:layout_constraintStart_toEndOf="@+id/image_bell"/>
            <TextView
                android:id="@+id/content_notification"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Bạn có lịch thi học của học phần Tin học cơ sở"
                android:fontFamily="@font/inter_regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/gray_text"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/image_bell"
                app:layout_constraintBottom_toBottomOf="@+id/image_bell"
                app:layout_constraintStart_toEndOf="@+id/image_bell"/>
            <TextView
                android:id="@+id/time_notification"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Ngày 27/08/2022"
                android:fontFamily="@font/inter_regular"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/red1"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/image_bell"
                app:layout_constraintStart_toEndOf="@+id/image_bell"/>
            <ImageView
                android:id="@+id/label_not_read"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/label_not_read"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>